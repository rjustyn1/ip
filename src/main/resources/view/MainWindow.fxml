<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ferdi.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" vbarPolicy="ALWAYS" fitToWidth="true"
                    prefHeight="535.0" prefWidth="385.0" AnchorPane.topAnchor="1.0"
                    AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0">
            <content>
                <VBox fx:id="dialogContainer" spacing="10.0" />
            </content>
        </ScrollPane>
        <TextField fx:id="userInput" onAction="#handleUserInput" prefWidth="325.0"
                   AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="1.0" />
        <Button fx:id="sendButton" text="Send" onAction="#handleUserInput" prefWidth="55.0"
                AnchorPane.bottomAnchor="1.0" AnchorPane.rightAnchor="1.0" />
    </children>
</AnchorPane>
